<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center"
        android:background="#b6fcd5"
        tools:context=".activities.ResultActivity">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:text="Final Result "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/result_bg"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">


        <TextView
            android:id="@+id/result_tv_HighScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Score: "
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/result_tv_Num_of_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Quesions :"
            android:textColor="#000"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/result_tv_correct_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct: "
            android:textColor="#000"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/result_tv_wrong_Ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong: "
            android:textColor="#000"
            android:textSize="25sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_result_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_bt_bg"
                android:text="Main Menu"
                android:textAllCaps="false"
                android:textColor="@color/dialogColor"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
