<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6fcd5"
    tools:context=".activities.LevelsClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp">

        <androidx.cardview.widget.CardView
            style="@style/cv1"
            android:onClick="debutant"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/debutant"
            tools:layout_editor_absoluteX="10dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Débutant"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="387dp"
            android:layout_height="100dp"
            android:layout_above="@+id/intermediaire"
            android:layout_margin="10sp"
            android:onClick="intermediaire"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/intermediaire"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Intermédiaire"
                android:textColor="@color/white"

                android:textSize="21dp"
                android:textStyle="bold"

                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="387dp"
            android:layout_height="100dp"
            android:layout_above="@+id/avance"
            android:layout_margin="10sp"
            android:onClick="avance"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/avance"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Avancé"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold"

                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="68dp"
        android:text="Merci de choisir le niveau"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>