<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity2"
    android:background="#b6fcd5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/geographie"
            android:layout_width="387dp"
            android:layout_height="130dp"
            android:layout_above="@+id/buttonToList"
            android:layout_margin="10sp"
            android:onClick="geographie"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonToList"

            tools:layout_editor_absoluteX="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_marginStart="460px"
                app:srcCompat="@mipmap/geo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Géographie"
                android:textSize="23dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/culture"
            android:layout_width="387dp"
            android:layout_height="130dp"
            android:layout_above="@+id/buttonToList"
            android:layout_margin="10sp"
            android:onClick="culture"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonToList"
            tools:layout_editor_absoluteX="10dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Culture Général"
                android:textSize="23dp"

                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="460px"
                app:srcCompat="@mipmap/culture"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/histoire"
            android:layout_width="387dp"
            android:layout_height="130dp"
            android:layout_above="@+id/buttonToList"
            android:layout_margin="10sp"
            android:onClick="histoire"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="10sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonToList"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histoire"
                android:textSize="23dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="460px"
                app:srcCompat="@mipmap/histoire"

                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/buttonToList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Se déconnecter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#FF4500"
        android:onClick="onBtnClick"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="88dp"
        android:text="Welcome To Our App"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>